@{
    ViewData["Title"] = "ForgotPassword";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TradeWave ForgotPassword</title>
    <link rel="stylesheet" href="~/css/Login.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Kanit:wght@700&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Ubuntu:wght@700&display=swap"
        rel="stylesheet">
</head>

<body>
    <div class="left-side">
        <div class="ProductName">TradeWave</div>
        <img src="https://img.freepik.com/free-photo/trading-stock-stock-market-business-graph-trading-investment-broker-stock-exchange-market_169016-66719.jpg?t=st=1741875231~exp=1741878831~hmac=1fdbb3c044cbfec12636a9e69faec1ea8d81782882acfec7da1678cf57135857&w=2000"
            alt="">
    </div>

    <div class="login-wrapper">
        <div class="login-box">
            <h2>Welcome Back!</h2>

            <form method="post" asp-controller="Home" asp-action="ForgotPassword">
                <input type="email" name="email" placeholder="Email address" required>
                <input type="password" name="newPassword" placeholder="New Password" required>
                <input type="password" name="confirmPassword" placeholder="Confirm Password" required>

                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger">
                        @ViewBag.Error
                    </div>
                }

                <button class="submit" type="submit">Reset Password</button>
            </form>
            <p>Don't have an account? <a asp-controller="Home" asp-action="Register">Sign up</a></p>
        </div>
    </div>
</body>
</html>
