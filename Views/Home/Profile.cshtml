@model TradeWave.Models.User

@{
    ViewData["Title"] = "Profile Information";
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Profile Information</title>
  <style>
    body {
        font-family: Arial, sans-serif;
        background: #f9fafb;
    }

    .container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .list-group {
        background: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .list-group-item {
        padding: 15px 20px;
        border: none;
        border-bottom: 1px solid #f1f5f9;
        background-color: #fff;
        color: #1e293b;
        text-decoration: none;
        display: block;
    }

    .list-group-item:last-child {
        border-bottom: none;
    }

    .list-group-item.active {
        background-color: #1e293b;
        color: white;
    }

    h3 {
        margin-bottom: 20px;
        color: #1e293b;
    }

    form .form-label {
        margin-bottom: 5px;
        color: #374151;
        font-weight: 600;
    }

    .form-control,
    .form-select {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 8px;
        outline: none;
        background-color: #fff;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #1e293b;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        transition: background 0.3s;
        min-width: 100px;
    }

    .btn-dark {
        background-color: #1e293b;
        color: white;
    }

    .btn-dark:hover {
        background-color: #334155;
    }

    .btn-outline-secondary {
        background-color: #f1f5f9;
        color: #1e293b;
    }

    .btn-outline-secondary:hover {
        background-color: #e2e8f0;
    }

    @@media (max-width: 768px) {
        .row {
            flex-direction: column;
        }
        .col-md-3, .col-md-9 {
            width: 100%;
        }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="row d-flex">
      <!-- Sidebar -->
      <div class="col-md-3 mb-3">
        <div class="list-group">
          <a href="#" class="list-group-item active">Profile Information</a>
        </div>
      </div>

      <!-- Main Form -->
      <div class="col-md-9">
        <h3>Profile Information</h3>
        
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                @TempData["Message"]
            </div>
        }

        <form method="POST">
          <div class="mb-3">
            <label for="firstName" class="form-label">First Name</label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", id = "Name" })
            @Html.ValidationMessageFor(m => m.Name)
          </div>

          <div class="mb-3">
            <label for="lastName" class="form-label">Surname</label>
            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", id = "Surname" })
            @Html.ValidationMessageFor(m => m.Surname)
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">Email Address</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "Email" })
            @Html.ValidationMessageFor(m => m.Email)
          </div>
          
          <div class="mb-3">
            <label for="wallet" class="form-label">Wallet Address</label>
            @Html.TextBoxFor(m => m.WalletAdress, new { @class = "form-control", id = "WalletAddress" })
            @Html.ValidationMessageFor(m => m.WalletAdress)
          </div>

          <div class="mb-3">
            <label for="bio" class="form-label">User Image Path</label>
            @Html.TextBoxFor(m => m.UserImagePath, new { @class = "form-control", id = "UserImagePath" })
            @Html.ValidationMessageFor(m => m.UserImagePath)
          </div>

          <button type="submit" class="btn btn-dark">Save Changes</button>
        </form>
        
      </div>
    </div>
  </div>
</body>
</html>
